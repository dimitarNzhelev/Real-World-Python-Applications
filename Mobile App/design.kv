<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: 20
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint:{'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: login_wrong
                text:''
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
            Button:
                text: "Sing Up"
                background_color: 1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
                on_press: root.sing_up()

<SingUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sing up to begin your journey!"
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SingUpScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        
        Label:
            text: "SingUp Successfull"
        Button:
            opacity: 1 if self.state == 'normal' else 0.5
            text: "Login Page"
            size_hint: 0.35, 0.35
            pos_hint: {'center_x': 0.8, 'center_y': 0.8}
            on_press: root.success()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            Button:
                text: "Log out"
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.8, 'center_y': 0.8}
                on_press: root.log_out()
                background_color: 1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved"
        Button:
            text: "Submit"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote_output
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SingUpScreen:
        name: "singup_screen"
    SingUpScreenSuccess:
        name: "singup_success"
    LoginScreenSuccess:
        name: "login_success"